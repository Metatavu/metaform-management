extends layout/admin-layout

block custom-head-admin
  link(rel='stylesheet', href='//cdn.metatavu.io/libs/codemirror/5.39.2/lib/codemirror.css')
  script(defer='defer',src='//cdn.metatavu.io/libs/codemirror/5.35.0/lib/codemirror.js',type='text/javascript')
  script(defer='defer',src='//cdn.metatavu.io/libs/codemirror/5.35.0/mode/properties/properties.js',type='text/javascript')
  script(defer='defer',src='/js/codemirror.min.js',type='text/javascript')

block body
  form(method="POST")
    .container
      .row.pt-4
        .col
          h3
            |Email notification editor
        .col.text-right
          a.btn.btn-info(href="/admin/email-notifications")
            |Notification list
      .row
        .col
          label
            |Subject template
      .row
        .col
          textarea.codemirror(name="subjectTemplate",data-mode="freemarker")
            =emailNotification.subjectTemplate
      .row
        .col
          label
            |Content template
      .row
        .col
          textarea.codemirror(name="contentTemplate",data-mode="freemarker")
            =emailNotification.contentTemplate
      .row
        .col
          label
            |Emails
      .row
        .col
          input.form-control(name="emails",value=emailNotification.emails.join(','))
      .row
        .col.pt-2
          input.btn.btn-success(type="submit",value="Save")
        