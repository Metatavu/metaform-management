include ../mixins/common
include ../mixins/mobile-navigation

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    script(defer='defer',src='//cdn.metatavu.io/libs/regenerator-runtime/0.11.1/runtime.js')
    script(defer='defer',src='//cdn.metatavu.io/libs/String.prototype.startsWith/0.2.0/startswith.js',type='text/javascript')
    script(defer='defer',src='//cdn.metatavu.io/libs/jquery/3.1.1/jquery.min.js',type='text/javascript')
    script(defer='defer',src='//cdn.metatavu.io/libs/tether/1.3.3/js/tether.min.js',type='text/javascript')
    script(defer='defer',src='//cdn.metatavu.io/libs/bootstrap/4.1.0/js/bootstrap.min.js')
    script(defer='defer', src='//cdn.metatavu.io/libs/moment/2.17.1/moment-with-locales.js')
    script(defer='defer', src='/js/navigation.min.js')
    link(rel='stylesheet', href='//cdn.metatavu.io/libs/bootstrap/4.1.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='//cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css')
    link(rel='stylesheet', href='//cdn.metatavu.io/libs/font-awesome/4.6.3/css/font-awesome.min.css')
    block custom-head
    if metaformMode === 'test'
      script(defer="defer" src="//cdn.metatavu.io/libs/tools/debug/0.0.2/debug.js")
  body
    nav.navbar.navbar-dark.sticky-top.bg-dark.flex-md-nowrap.p-0
      ul.navbar-nav.px-3.ml-auto
        li.nav-item.text-nowrap
          a.nav-link.nav-toggle(href='#')
            i(class="fa fa-bars")
    +mobileNavigation()
    block body
